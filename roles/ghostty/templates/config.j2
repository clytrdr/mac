# Primary font face used for terminal text rendering
font-family = {{ ghostty_font_family }}

# Font size in points (matching PyCharm terminal: 15.0)
font-size = {{ ghostty_font_size }}

# Color theme with automatic dark/light mode switching based on system appearance
theme = {{ ghostty_theme }}

# Default shell to launch when opening a new terminal window
command = {{ ghostty_shell }}

# Disable shell integration (prompt marks, cursor override, etc.)
shell-integration = none

# Disable automatic clipboard copy when text is selected (matching PyCharm: "Copy to clipboard on selection" OFF)
copy-on-select = {{ ghostty_copy_on_select | lower }}

# Cursor shape: block (full character width), bar (thin line), or underline
cursor-style = {{ ghostty_cursor_style }}

# Enable clickable URL detection and highlighting in terminal output
link-url = {{ ghostty_link_url | lower }}
